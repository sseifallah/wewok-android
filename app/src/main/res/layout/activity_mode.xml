<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.ModeActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.11"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline15H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.155"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline21H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.21"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline22H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.22"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline26H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline37H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline40H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.42"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline51H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.52"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline56H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline58H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.59"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline63H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.62"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline73H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.72"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline79H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.79"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline89H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.89"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline92H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.92"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline05V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline30V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.37"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline70V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.63"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline95V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_rounded_bottom_corners"
        app:layout_constraintBottom_toTopOf="@id/guideline11H"/>


    <TextView
        android:id="@+id/txt_wok"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/bienvenue"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline11H"/>

  <!--  <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_cart"
        app:layout_constraintEnd_toStartOf="@id/guideline95V"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline11H"
        app:layout_constraintWidth_percent="0.05"/>-->

    <TextView
        android:id="@+id/txt_base"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/votre_commande"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@id/guideline05V"
        app:layout_constraintTop_toTopOf="@id/guideline15H"
        app:layout_constraintBottom_toTopOf="@id/guideline21H"/>

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/round_emporter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:shape_roundRect_borderColor="@color/grey"
        app:shape_roundRect_borderWidth="1dp"
        app:shape_roundRect_bottomLeftRadius="15dp"
        app:shape_roundRect_bottomRightRadius="15dp"
        app:shape_roundRect_topLeftRadius="15dp"
        app:shape_roundRect_topRightRadius="15dp"
        app:layout_constraintTop_toBottomOf="@id/guideline22H"
        app:layout_constraintBottom_toTopOf="@id/guideline56H"
        app:layout_constraintStart_toEndOf="@id/guideline05V"
        app:layout_constraintEnd_toEndOf="@id/guideline95V"
        />

    <ImageView
        android:id="@+id/img_emporter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_emp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintStart_toStartOf="@id/guideline30V"
        app:layout_constraintEnd_toEndOf="@id/guideline70V"
        app:layout_constraintTop_toTopOf="@id/guideline26H"
        app:layout_constraintBottom_toBottomOf="@id/guideline37H"/>

    <TextView
        android:id="@+id/txt_emporter"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="A emporter"
        android:textSize="21sp"
        android:textColor="@color/black"

        android:fontFamily="@font/nunito_bold"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@id/guideline05V"
        app:layout_constraintEnd_toEndOf="@id/guideline95V"
        app:layout_constraintTop_toBottomOf="@id/guideline37H"
        app:layout_constraintBottom_toTopOf="@id/guideline40H"/>
    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/emporter_circle_next"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:shape_roundRect_borderColor="@color/grey"
        app:shape_roundRect_borderWidth="1dp"
        app:shape_roundRect_bottomLeftRadius="30dp"
        app:shape_roundRect_bottomRightRadius="30dp"
        app:shape_roundRect_topLeftRadius="30dp"
        app:shape_roundRect_topRightRadius="30dp"
        app:layout_constraintStart_toStartOf="@id/guideline30V"
        app:layout_constraintEnd_toEndOf="@id/guideline70V"
        app:layout_constraintTop_toTopOf="@id/guideline40H"
        app:layout_constraintBottom_toBottomOf="@id/guideline51H"
        />

    <ImageView
        android:id="@+id/ic_emporter_next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_next"
        app:layout_constraintStart_toStartOf="@id/guideline30V"
        app:layout_constraintEnd_toEndOf="@id/guideline70V"
        app:layout_constraintTop_toTopOf="@id/guideline40H"
        app:layout_constraintBottom_toBottomOf="@id/guideline51H"/>


    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/round_livraison"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:shape_roundRect_borderColor="@color/grey"
        app:shape_roundRect_borderWidth="1dp"
        app:shape_roundRect_bottomLeftRadius="15dp"
        app:shape_roundRect_bottomRightRadius="15dp"
        app:shape_roundRect_topLeftRadius="15dp"
        app:shape_roundRect_topRightRadius="15dp"
        app:layout_constraintTop_toBottomOf="@id/guideline58H"
        app:layout_constraintBottom_toTopOf="@id/guideline92H"
        app:layout_constraintStart_toEndOf="@id/guideline05V"
        app:layout_constraintEnd_toEndOf="@id/guideline95V"
        />

    <ImageView
        android:id="@+id/img_livraison"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_liv"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintStart_toStartOf="@id/guideline30V"
        app:layout_constraintEnd_toEndOf="@id/guideline70V"
        app:layout_constraintTop_toTopOf="@id/guideline63H"
        app:layout_constraintBottom_toBottomOf="@id/guideline73H"/>

    <TextView
        android:id="@+id/txt_liv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Livraison"
        android:gravity="center_vertical"
        android:textSize="21sp"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/guideline05V"
        app:layout_constraintEnd_toEndOf="@id/guideline95V"
        app:layout_constraintTop_toBottomOf="@id/guideline73H"
        app:layout_constraintBottom_toTopOf="@id/guideline79H"/>

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/liv_circle_next"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:shape_roundRect_borderColor="@color/grey"
        app:shape_roundRect_borderWidth="1dp"
        app:shape_roundRect_bottomLeftRadius="30dp"
        app:shape_roundRect_bottomRightRadius="30dp"
        app:shape_roundRect_topLeftRadius="30dp"
        app:shape_roundRect_topRightRadius="30dp"
        app:layout_constraintStart_toStartOf="@id/guideline30V"
        app:layout_constraintEnd_toEndOf="@id/guideline70V"
        app:layout_constraintTop_toTopOf="@id/guideline79H"
        app:layout_constraintBottom_toBottomOf="@id/guideline89H"
        />

    <ImageView
        android:id="@+id/ic_liv_next"
        android:layout_width="40dp"
        android:src="@drawable/ic_next"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="@id/guideline30V"
        app:layout_constraintEnd_toEndOf="@id/guideline70V"
        app:layout_constraintTop_toTopOf="@id/guideline79H"
        app:layout_constraintBottom_toBottomOf="@id/guideline89H"/>

    <ProgressBar
        android:id="@+id/pg_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTint="@color/orange"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>