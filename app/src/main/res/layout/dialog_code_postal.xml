<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="210dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_round_card"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline20H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_diaog_exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="0dp" />

    <TextView
        android:id="@+id/txt_dialog"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/txt_zone"
        android:textSize="19sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:background="@drawable/ic_cart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline20H"
        app:layout_constraintHeight_percent="0.2"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_code"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Code postale"
        android:textSize="12sp"
        android:drawablePadding="10dp"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:fontFamily="@font/nunito_semibold"
        android:backgroundTint="@color/grey"
        android:padding="4dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/txt_dialog"
        app:layout_constraintEnd_toEndOf="@id/txt_dialog"
        app:layout_constraintTop_toBottomOf="@id/txt_dialog"
        app:layout_constraintHeight_percent="0.2" />
    
    <Button
        android:id="@+id/btn_verifier"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:text="Verifier"
        android:fontFamily="@font/nunito_bold"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_round_card_orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>