<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.about.AboutFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.11"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline13H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline18H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline30H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.26"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline35H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline80H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.78"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline93H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.93"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline105H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1.05"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline05V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline38V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.38"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline62V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.62"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline95V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_rounded_bottom_corners"
        app:layout_constraintBottom_toTopOf="@id/guideline11H"/>


    <TextView
        android:id="@+id/txt_wok"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="A propos"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline11H"/>





    <ImageView
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:elevation="3dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline18H"
        app:layout_constraintBottom_toTopOf="@id/guideline30H"/>
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/edit_profil"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:elevation="4dp"
        android:visibility="gone"
        app:civ_border_color="@color/orange"
        app:civ_border_width="0dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintStart_toEndOf="@id/guideline38V"
        app:layout_constraintEnd_toStartOf="@id/guideline62V"
        app:layout_constraintTop_toBottomOf="@id/guideline18H"
        app:layout_constraintBottom_toTopOf="@id/guideline30H"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintVertical_bias="0.99"/>

    <TextView
        android:id="@+id/txt_descover"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Découvrez l’application officielle du restaurant Wewok  !"
        android:textColor="@color/black"
        android:textSize="16sp"

        android:fontFamily="@font/nunito_bold"
        android:gravity="center_vertical"
        android:elevation="3dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/guideline05V"
        app:layout_constraintEnd_toEndOf="@id/guideline95V"
        app:layout_constraintTop_toBottomOf="@id/guideline30H"/>

    <TextView
        android:id="@+id/txt_desc_details"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars = "vertical"
        android:layout_marginTop="13dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_semibold"
        app:layout_constraintTop_toBottomOf="@id/txt_descover"
        app:layout_constraintBottom_toTopOf="@id/guideline93H"
        android:text="@string/txt_about"
        app:layout_constraintStart_toStartOf="@id/guideline05V"
        app:layout_constraintEnd_toEndOf="@id/guideline95V"/>



