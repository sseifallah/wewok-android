<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="95dp"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    >
    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/round_rect_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shape_roundRect_borderColor="@color/grey"
        app:shape_roundRect_borderWidth="1dp"
        app:shape_roundRect_bottomLeftRadius="15dp"
        app:shape_roundRect_bottomRightRadius="15dp"
        app:shape_roundRect_topLeftRadius="15dp"
        app:shape_roundRect_topRightRadius="15dp"
        tools:ignore="MissingClass" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="0dp"
            android:src="@drawable/ic_guest_wok"
            />
        <TextView
            android:id="@+id/lbl_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Sans lÃ©gumes"
            android:textSize="11sp"
            android:textColor="@color/bold_grey"
            android:fontFamily="@font/nunito_semibold"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>