<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="93dp"
    android:layout_height="93dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingEnd="7dp">
    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/round_rect_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shape_roundRect_borderColor="@color/grey"
        app:shape_roundRect_borderWidth="1dp"
        app:shape_roundRect_bottomLeftRadius="15dp"
        app:shape_roundRect_bottomRightRadius="15dp"
        app:shape_roundRect_topLeftRadius="15dp"
        app:shape_roundRect_topRightRadius="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:paddingTop="9dp"
            android:paddingBottom="3dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:src="@drawable/ic_guest_wok"
            />
        <TextView
            android:id="@+id/lbl_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Sans légumes"
            android:textSize="11sp"
            android:textColor="@color/bold_grey"
            android:fontFamily="@font/nunito_semibold"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            />
        <TextView
            android:id="@+id/lbl_price"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0"
            android:gravity="center"
            android:text="1,60€"
            android:textSize="11sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/nunito_semibold"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>